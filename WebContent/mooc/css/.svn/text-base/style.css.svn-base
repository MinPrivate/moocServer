#main{
 margin:0px auto;
 padding:0;
 font-family:"Helvetica Neue",Helvetica,sans-serif,Arial;
 /*color:#eee;*/
 background: url(../images/flip/container_bg.png) no-repeat;
 background-position:center center;
 width:700px;
 height: 230px;
 } 
 
 
